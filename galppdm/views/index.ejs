<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/resultado" method="get" id="form">
    <p>número 1 <input type="number" name="num1" required></p>
    <p>número 2 <input type="number" name="num2"required id="num2"></p>
    <p id="erro"></p>
    <p>operacao <input type="text" name="operacao"required id="operacao"></p>
    <p> <input type="submit" value="enviar"></p>
    </form>
    <script>
   
    const form =document.querySelector("#form")

    form.addEventListener("submit", (e)=>{
        const operacao = document.querySelector("#operacao").value
        const num2 = document.querySelector("#num2").value
        const erro = document.querySelector("#erro")

        if(operacao =="/"){
            if(num2==0){
                e.preventDefault()
                erro.textContent = "erro"
            }
            return
        }
    })

    </script>
</body>
